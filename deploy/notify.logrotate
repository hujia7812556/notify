$SERVER_TARGET/logs/notify*.log {
    daily           # 每天轮转
    rotate 7        # 保留7天的日志
    missingok       # 如果日志文件不存在也不报错
    compress        # 压缩旧的日志文件
    delaycompress   # 延迟压缩到下一次轮转
    notifempty      # 当日志文件为空时不轮转
    create 0640 notify notify  # 创建新日志文件的权限和所有者
    postrotate      # 轮转后执行的命令
        systemctl restart notify  # 重启服务以使用新的日志文件
    endscript
} 